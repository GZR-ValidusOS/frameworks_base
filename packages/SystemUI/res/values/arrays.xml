<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- BatteryMeterView parameters -->
    <array name="batterymeter_color_levels">
        <item>15</item>
        <item>100</item>
    </array>
    <array name="batterymeter_color_values">
        <item>@color/battery_charge_level_low_level</item>
        <item>@color/battery_charge_level_on_normal_statusbar</item>
    </array>

    <!-- Validus Logo -->
    <string-array name="status_bar_validus_logo_style_entries">
        <item>The Wolf Look</item>
        <item>Running Wolf</item>
        <item>Wolf Teeth</item>
    </string-array>

    <string-array name="status_bar_validus_logo_style_values" translatable="false">
        <item>0</item>
        <item>1</item>
        <item>2</item>
    </string-array>

    <!-- Validus Logo Placement -->
    <string-array name="status_bar_validus_logo_position_entries">
        <item>Disabled</item>
        <item>Statusbar Only</item>
        <item>Lockscreen Only</item>
        <item>Lockscreen and Statusbar</item>
    </string-array>

    <string-array name="status_bar_validus_logo_position_values" translatable="false">
        <item>0</item>
        <item>1</item>
        <item>2</item>
        <item>3</item>
    </string-array>

</resources>
